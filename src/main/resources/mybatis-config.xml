<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">	

<configuration>

	<!-- 
		  POJO Property(Camel Case), Table Column(Snake Case)형태로 데이타가 설계된 전제하에 
		  Mybatis Mapper에서 반환 데이터의 resultMap을 사용하지 않아도 POJO의 프로퍼티와 테이블의 컬럼명을 바인딩 한다. 
	 -->

	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true"/>
	</settings>
	
	<typeAliases>
		<typeAlias type="com.application.trainingVer1.board.dto.BoardDTO" alias="BoardDTO"/>
	</typeAliases>
	
</configuration>